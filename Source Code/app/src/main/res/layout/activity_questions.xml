<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appTheme"
    android:id="@+id/layout_questions"
    tools:context=".QuestionsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarQuestions"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Interview Questions Examples"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:fontFamily="@font/notosansjp_bold"
        android:gravity="center_vertical"/>

    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="800dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarQuestions">

        <ir.alirezabdn.wp7progress.WP10ProgressBar
            android:id="@+id/progressBarQuestions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:indicatorRadius="8"
            app:interval="100" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/questionsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="806dp"
            app:reverseLayout="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbarQuestions" />

        <com.ramotion.circlemenu.CircleMenuView
            android:id="@+id/circular_menu_refBooks"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="550dp"
            android:layout_marginLeft="200dp"
            app:button_colors="@array/colors"
            app:button_icons="@array/icons" />

    </FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>