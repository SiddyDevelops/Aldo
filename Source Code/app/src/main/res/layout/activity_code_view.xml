<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_code"
    android:background="@color/blue_shade"
    tools:context=".CodeViewActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarCode"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Code"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:fontFamily="@font/notosansjp_bold"
            android:gravity="center_vertical"/>

    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="750dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbarCode">

        <io.github.kbiakov.codeview.CodeView
            android:id="@+id/code_view"
            android:layout_width="match_parent"
            android:layout_height="750dp"/>

        <com.ramotion.circlemenu.CircleMenuView
            android:id="@+id/circular_menu_codeView"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="550dp"
            android:layout_marginStart="200dp"
            app:button_colors="@array/colors"
            app:button_icons="@array/icons" />

    </FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>